<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <% if current_user %>
          <%= link_to 'New Foto', new_foto_url, class: 'navbar-brand' %>
          <div style="color:forestgreen", class="navbar-brand">
              <%= current_user.email %>  </div>
          <%= link_to "Log out", logout_path, method: "delete",data: { confirm: 'Log out! Are you sure?' }, class: 'navbar-brand' %>
      <% else %>
          <%= link_to "Login", '/login', class: 'navbar-brand' %>
          <%= link_to "Signup", 'signup', class: 'navbar-brand' %>
      <% end %>

    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
