<%= form_for @foto, html: { multipart: true } do |f| %>
    <% if @foto.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@foto.errors.count, "error") %> prohibited this foto from being saved:</h2>

          <ul>
            <% @foto.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_area :title %>
    </div>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="field">
      <i><%= f.hidden_field :username, :value => current_user.username %></i><br>
    </div>
    <div class="field">
      <i><%= f.label "Choose image" %></i>
      <%= f.file_field :image %>
    </div><br>
    <center><div class="actions">
      <%= f.submit class: "btn-submit"  %>
    </div></center><br>
<% end %>
